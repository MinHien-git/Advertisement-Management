<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Sở VHTT - Duyệt yêu cầu cấp phép</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS v5.2.1 -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />

    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
      integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    />

    <!--for datepicker-->
    <script
      src="https://unpkg.com/gijgo@1.9.14/js/gijgo.min.js"
      type="text/javascript"
    ></script>
    <link
      href="https://unpkg.com/gijgo@1.9.14/css/gijgo.min.css"
      rel="stylesheet"
      type="text/css"
    />

    <link rel="stylesheet" href="/styles/global.css" />

    <link rel="stylesheet" href="/styles/phan-cum-soVHTT/navbar.css" />
    <link rel="stylesheet" href="/styles/phan-cum-soVHTT/page_content.css" />

    <script src="/scripts/phan-cum-soVHTT/navigation.js"></script>
    <script src="/scripts/phan-cum-soVHTT/lisence_list.js"></script>
    <script src="/scripts/phan-cum-soVHTT/page_functions.js"></script>
  </head>

  <body>
    <script src="/scripts/navbar.js" defer></script>
    <div class="wrapper">
      <%- include('../includes/header.ejs')%>
      <main>
        <div class="container" id="main__container">
          <h1 class="fw-bold h2" id="page__title">Duyệt yêu cầu cấp phép</h1>
          <form action="" class="d-flex search__form">
            <input
              type="text"
              class="form-control me-2"
              placeholder="Nhập thông tin"
            />
            <button
              type="submit"
              class="btn btn-primary nowrap"
              id="search__btn"
            >
              Tìm kiếm
            </button>
            <button type="submit" class="btn btn-dark nowrap">
              <i class="bi bi-arrow-down-up"></i>
              Sắp xếp
            </button>
            <button type="submit" class="btn btn-dark nowrap">
              <i class="bi bi-funnel"></i> &nbsp;Lọc
            </button>
          </form>

          <div id="main__list">
            <div id="info__desc">
              <div class="list__title__container mt-3">
                <ul class="list__flex fw-bold">
                  <li class="list__col1">Bảng quảng cáo</li>
                  <li class="list__col2">Địa điểm</li>
                  <li class="list__col3">Trạng thái</li>
                  <li class="list__col4">
                    <button class="btn btn-link ps-4" disabled></button>
                  </li>
                </ul>
                <% for (let i=0; i < locals.billboards.length; i++) { %> <%
                const advertisement=locals.billboards[i]; %> <% const
                id=advertisement._id; %>
                <div id="<%='list__item' + id %>" class="card shadow-sm">
                  <div class="card-header" id="brief__info<%= id %>">
                    <ul class="list__flex">
                      <li class="list__col1">
                        <%= advertisement.properties.type %>
                      </li>
                      <li class="list__col2">
                        <%= advertisement.properties.place %>
                      </li>
                      <% if (advertisement.license) { %> <% if
                      (advertisement.license.state === 0) {%>
                      <li class="list__col3 fw-semibold text-success">
                        Đã cấp phép
                      </li>
                      <% } else if (advertisement.license.state === 1){ %>
                      <li class="list__col3 fw-semibold text-warning">
                        Chưa cấp phép
                      </li>
                      <% } else if (advertisement.license.state === 2){ %>
                      <li class="list__col3 fw-semibold text-danger">
                        Đã từ chối
                      </li>
                      <% } %> <% } %>
                      <li class="list__col4">
                        <button
                          class="btn collapsed"
                          id="collapse__btn<%= id %>"
                          type="button"
                          onclick="toggleCollapseButton('collapse__btn<%= id %>')"
                          data-bs-toggle="collapse"
                          data-bs-target="#full__info<%= id %>"
                          aria-expanded="false"
                          aria-controls="full__info<%= id %>">
                          <i class="bi bi-chevron-down"></i>
                        </button>
                      </li>
                    </ul>
                  </div>

                  <div
                    id="full__info<%= id %>"
                    class="collapse"
                    aria-labelledby="brief__info<%= id %>">
                    <div class="card-body">
                      <ul id="full__info__list">
                        <li class="mock__image__container">
                          <div class="mock__image">&nbsp;</div>
                          <div class="mock__image">&nbsp;</div>
                        </li>
                        <li>
                          <p class="fw-bold">Thông tin bảng quảng cáo</p>
                          <ul>
                            <li>
                              Kích thước:
                              <span class="fw-bold">
                                <%= advertisement.properties.size %>
                              </span>
                            </li>
                            <li>
                              Số lượng:
                              <span class="fw-bold">
                                <%= advertisement.properties.amount %>
                              </span>
                            </li>
                            <li>
                              Hình thức:
                              <span class="fw-bold">
                                <%= advertisement.properties.type_advertise %>
                              </span>
                            </li>
                            <li>
                              Phân loại:
                              <span class="fw-bold">
                                <%= advertisement.properties.place_type %>
                              </span>
                            </li>
                          </ul>
                        </li>
                        <% if (advertisement.license) { %>
                        <li>
                          <p class="fw-bold">Thông tin công ty</p>
                          <ul>
                            <li>
                              Tên công ty:
                              <span class="fw-bold">
                                <%= advertisement.license.company_name %>
                              </span>
                            </li>
                            <li>
                              Email liên hệ:
                              <span class="fw-bold">
                                <%= advertisement.license.company_contact %>
                              </span>
                            </li>
                            <li>
                              Ngày bắt đầu:
                              <span class="fw-bold">
                                <%= advertisement.license.start_date %>
                              </span>
                            </li>
                            <li>
                              Ngày kết thúc:
                              <span class="fw-bold">
                                <%= advertisement.license.end_date %>
                              </span>
                            </li>
                          </ul>
                        </li>
                        <% } %>
                        <li>
                          <ul class="buttons__container">
                            <% if (advertisement.license.state === 1) { %>
                            <li>
													<button class="btn btn-success mb-2 nowrap"  data-bs-toggle="modal"
														data-bs-target="#accept__confirm__modal"
                            onclick="passToConfirmModal(this)"
                            data-billboard-id="<%=id%>">
														<i class="bi bi-check-circle"></i> Cấp phép
													</button>
												</li>
												<li>
													<button
														class="btn btn-outline-warning mb-2 nowrap"
														data-bs-toggle="modal"
														data-bs-target="#require__changes__modal"
                            data-billboard-id="<%=id%>"
                            onclick="passToConfirmModal(this)">
														<i class="bi bi-pencil"></i> YC chỉnh
													</button>
												</li>
												<li>
													<button
														class="btn btn-danger nowrap"
														data-bs-toggle="modal"
														data-bs-target="#decline__confirm__modal"
                            onclick="passToConfirmModal(this)"
                            data-billboard-id="<%=id%>">
														<i class="bi bi-x-lg"></i> Từ chối
													</button>
												</li>
                            <% } else if (advertisement.license.state === 0) { %>
												<li>
													<button
														class="btn btn-outline-warning mb-2 nowrap"
														data-bs-toggle="modal"
														data-bs-target="#require__changes__modal">
														<i class="bi bi-pencil"></i> YC chỉnh
													</button>
												</li>
                            <% } else if (advertisement.license.state === 2) { %>
                        <li>
													
												</li>
                            <% } %>
                          </ul>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
                <% } %>
              </div>
            </div>

            <div
              class="modal fade"
              id="require__changes__modal"
              tabindex="-1"
              aria-labelledby="require__changes__label"
              aria-hidden="true"
            >
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h3
                      class="modal-title fw-bold fs-5"
                      id="require__changes__label"
                    >
                      Yêu cầu chỉnh sửa nội dung
                    </h3>
                    <button
                      class="btn-close"
                      type="button"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>
                  <div class="modal-body">
                    <form action="">
                      <div
                        class="form-floating"
                        id="change__input"
                      >
                        <textarea
                          class="form-control"
                          placeholder="Nhập nội dung muốn sửa đổi"
                          id="change__textarea"
                          style="height: 25vh"
                        ></textarea>
                        <label for="change__textarea">Nhập nội dung...</label>
                      </div>
                    </form>
                  </div>
                  <div class="modal-footer">
                    <input type="hidden" name="id_confirm" id="id__confirm" value="0">
                    <button
                      type="button"
                      class="btn btn-secondary"
                      data-bs-dismiss="modal"
                    >
                      Huỷ
                    </button>
                    <button
                      type="button"
                      class="btn btn-primary"
                      data-bs-dismiss="modal"
                      onclick="sendLicenseChangeRequest(document.getElementById('id__confirm').value, document.getElementById('change__textarea').value)"
                      id="send__changes__btn"
                    >
                      Gửi yêu cầu
                    </button>
                  </div>
                </div>
              </div>
            </div>

            <div
              class="modal fade"
              id="accept__confirm__modal"
              tabindex="-1"
              aria-labelledby="accept__modal__label"
              aria-hidden="true"
            >
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h3
                      class="modal-title fw-bold fs-5"
                      id="accept__modal__label"
                    >
                      Xác nhận
                    </h3>
                    <button
                      class="btn-close"
                      type="button"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>
                  <div class="modal-body">
                    Bạn có chắc chắn muốn cấp phép cho yêu cầu này không?
                  </div>
                  <div class="modal-footer">
                    <input type="hidden" name="id_confirm" id="id__confirm" value="0">
                    <button
                      type="button"
                      class="btn btn-secondary"
                      data-bs-dismiss="modal"
                    >
                      Huỷ
                    </button>
                    <button
                      type="button"
                      class="btn btn-success"
                      data-bs-dismiss="modal"
                      onclick="approveLicense(document.getElementById('id__confirm').value)"
                      id="accept__confirm__btn"
                    >
                      Cấp phép
                    </button>
                  </div>
                </div>
              </div>
            </div>

            <div
              class="modal fade"
              id="decline__confirm__modal"
              tabindex="-1"
              aria-labelledby="decline__modal__label"
              aria-hidden="true"
            >
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h3
                      class="modal-title fw-bold fs-5"
                      id="decline__modal__label"
                    >
                      Xác nhận
                    </h3>
                    <button
                      class="btn-close"
                      type="button"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>
                  <div class="modal-body">
                    Bạn có chắc chắn muốn từ chối yêu cầu cấp phép này không?
                  </div>
                  <div class="modal-footer">
                    <input type="hidden" name="id_confirm" id="id__confirm" value="0">
                    <button
                      type="button"
                      class="btn btn-secondary"
                      data-bs-dismiss="modal"
                    >
                      Huỷ
                    </button>
                    <button
                      type="button"
                      class="btn btn-danger"
                      data-bs-dismiss="modal"
                      onclick="declineLicense(document.getElementById('id__confirm').value)"
                      id="decline__btn"
                    >
                      Từ chối
                    </button>
                  </div>
                </div>
              </div>
            </div>

            <div
              class="toast-container position-fixed bottom-0 end-0 p-3"
              style="z-index: 1"
            >
              <div
                class="toast align-items-center text-bg-success border-0"
                id="accept__success__toast"
                role="alert"
                aria-live="assertive"
                aria-atomic="true"
              >
                <div class="d-flex">
                  <div class="toast-body">
                    <i class="bi bi-check-lg"></i>
                    Cấp phép thành công!
                  </div>
                  <button
                    type="button"
                    class="btn-close btn-close-white me-2 m-auto"
                    data-bs-dismiss="toast"
                    aria-label="Close"
                  ></button>
                </div>
              </div>
              <div
                class="toast align-items-center text-bg-success border-0"
                id="send__success__toast"
                role="alert"
                aria-live="assertive"
                aria-atomic="true"
              >
                <div class="d-flex">
                  <div class="toast-body">
                    <i class="bi bi-envelope-check"></i>
                    Đã gửi yêu cầu chỉnh sửa!
                  </div>
                  <button
                    type="button"
                    class="btn-close btn-close-white me-2 m-auto"
                    data-bs-dismiss="toast"
                    aria-label="Close"
                  ></button>
                </div>
              </div>
              <div
                class="toast align-items-center text-bg-success border-0"
                id="decline__success__toast"
                role="alert"
                aria-live="assertive"
                aria-atomic="true"
              >
                <div class="d-flex">
                  <div class="toast-body">
                    <i class="bi bi-x-lg"></i>
                    Đã từ chối yêu cầu!
                  </div>
                  <button
                    type="button"
                    class="btn-close btn-close-white me-2 m-auto"
                    data-bs-dismiss="toast"
                    aria-label="Close"
                  ></button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
      <footer>
        <!-- place footer here -->
      </footer>
    </div>
    <script>
      function assignStatus(item_id) {
        const status_num = item_id % 4;
        let status = new String("	");
        switch (+status_num) {
          case 1: {
            status = `<li class="list__col3 fw-semibold" style="color: #e7b400">
										Chờ cấp phép
									</li>`;
            break;
          }
          case 2: {
            status = `<li class="list__col3 fw-semibold" style="color: #e7b400">
										Chờ cấp phép
									</li>`;
            break;
          }
          case 3: {
            status = `<li class="list__col3 fw-semibold" style="color: #329a44">
										Đã cấp phép
									</li>`;
            break;
          }
          case 0: {
            status = `<li class="list__col3 fw-semibold" style="color: #db3232">
										Đã từ chối
									</li>`;
            break;
          }
          default: {
            status = `<li class="list__col3 fw-semibold" style="color: #db3232">
										Chưa quy hoạch
									</li>`;
            break;
          }
        }
        return status;
      }

      function createListItem(advertisement) {
        let new_card = document.createElement("div");
        const id = advertisement.globalid;
        new_card.className = "card shadow-sm";
        new_card.id = "list__item" + id;
        new_card.innerHTML = `
							<div class="card-header" id="brief__info${id}">
								<ul class="list__flex">
									<li class="list__col1">${advertisement.type_billboard}</li>
									<li class="list__col2">${advertisement.address}</li>
									${assignStatus(id)}
									<li class="list__col4">
										<button
											class="btn collapsed"
											id="collapse__btn${id}"
											type="button"
											onclick="toggleCollapseButton('collapse__btn${id}')"
											data-bs-toggle="collapse"
											data-bs-target="#full__info${id}"
											aria-expanded="false"
											aria-controls="full__info${id}">
											<i class="bi bi-chevron-down"></i>
										</button>
									</li>
								</ul>
							</div>
							<div
								id="full__info${id}"
								class="collapse"
								aria-labelledby="brief__info${id}">
								<div class="card-body">
									<ul id="full__info__list">
										<li class="mock__image__container">
											<div class="mock__image">&nbsp;</div>
											<div class="mock__image">&nbsp;</div>
										</li>
										<li>
											<p class="fw-bold">Thông tin bảng quảng cáo</p>
											<ul>
												<li>
													Kích thước: <span class="fw-bold">${advertisement.properties.size}</span>
												</li>
												<li>
													Số lượng:
													<span class="fw-bold">${advertisement.properties.amount}</span>
												</li>
												<li>
													Hình thức:
													<span class="fw-bold">${advertisement.properties.type_advertise}</span>
												</li>
												<li>
													Phân loại: <span class="fw-bold">${advertisement.properties.place_type}</span>
												</li>
											</ul>
										</li>
										<li>
											<p class="fw-bold">Thông tin công ty</p>
											<ul>
												<li>
													Tên công ty:
													<span class="fw-bold">${advertisement.company_info.name}</span>
												</li>
												<li>
													Email liên hệ:
													<span class="fw-bold">${advertisement.company_info.contact}</span>
												</li>
												<li>
													Ngày bắt đầu:
													<span class="fw-bold">${advertisement.company_info.start_date}</span>
												</li>
												<li>
													Ngày kết thúc:
													<span class="fw-bold">${advertisement.company_info.end_date}</span>
												</li>
											</ul>
										</li>
										<li>
											${assignButtonStates(id)}
										</li>
									</ul>
								</div>
							</div>
	`;
        return new_card;
      }
    </script>
    <!-- Bootstrap JavaScript Libraries -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
      integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
      crossorigin="anonymous"
    ></script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
      integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
