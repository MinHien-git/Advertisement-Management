<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Chi tiết báo cáo</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link rel="icon" href="/images/map.png" />
    <!-- Bootstrap CSS v5.2.1 -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    />
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
      integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
      integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
      crossorigin=""
    />
    <link
      href="https://cdn.quilljs.com/1.3.7/quill.snow.css"
      rel="stylesheet"
    />
    <script src="https://cdn.quilljs.com/1.3.7/quill.js"></script>

    <link rel="stylesheet" href="/styles/phan-cum-phuong/trangchu.css" />
    <link rel="stylesheet" href="/styles/navbar.css" />
    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="stylesheet" href="/styles/phan-cum-phuong/danhsach.css" />
    <link rel="stylesheet" href="/styles/phan-cum-phuong/report.css" />
    <link rel="stylesheet" href="/styles/editor.css" />
    <link rel="stylesheet" href="/styles/phan-cum-phuong/chitiet.css" />
    <link rel="stylesheet" href="/styles/phan-cum-phuong/page_content.css" />
    <link
      href="https://cdn.quilljs.com/1.3.7/quill.snow.css"
      rel="stylesheet"
    />
    <script src="https://cdn.quilljs.com/1.3.7/quill.js"></script>
  </head>
  <body>
    <script src="/scripts/navbar.js" defer></script>
    <div class="wrapper">
      <%- include('../includes/header.ejs')%>
      <main>
        <div class="container" id="main__container">
          <h1 class="fw-bold h2 mb-0" id="page__title">Thông tin tài khoản</h1>
          <h5 class="fw-bold ms-3 mt-5 mb-2" id="page__title">
            Thông tin chung
          </h5>
          <div
            id="account__info"
            class="border border-primary rounded p-2"
            style="margin-top: 1rem; --bs-border-opacity: 0.5">
            <form action="/update/<%=locals.profile._id%>" method="post">
              <div class="form-group">
                <div class="row">
                  <div class="col">
                    <label for="account__name" class="fw-bold"
                      >Tên tài khoản</label
                    >
                    <input
                      type="text"
                      class="form-control mb-3 input__field"
                      name="name"
                      id="account__name"
                      value="<%=locals.profile.name%>" />
                  </div>
                  <div class="col">
                    <label for="account__name" class="fw-bold">Email</label>
                    <input
                      type="email"
                      class="form-control mb-3 input__field"
                      name="email"
                      id="account__email"
                      value="<%=locals.profile.email%>"
                      disabled />
                  </div>
                  <div class="w-100"></div>
                  <div class="col">
                    <label for="account__name" class="fw-bold"
                      >Số điện thoại</label
                    >
                    <input
                      type="number"
                      class="form-control mb-3 input__field"
                      name="phone"
                      id="account__phone"
                      onkeypress="if(this.value.length >=10) return false;"
                      value="<%=locals.profile.phone%>" />
                  </div>
                  <div class="col">
                    <label for="account__birth" class="fw-bold">Ngày sinh</label>
                    <input
                      type="date"
                      class="form-control mb-3 input__field"
                      name="birth"
                      id="account__birth"
                      value="<%=locals.profile.birth%>" />
                  </div>
                </div>
                <div class="row d-flex" style="justify-content: end">
                  <button class="btn btn-primary me-3">Lưu thay đổi</button>
                </div>
              </div>
            </form>
          </div>
          <h5 class="fw-bold ms-3 mt-5 mb-2" id="page__title">
            Thay đổi mật khẩu
          </h5>
          <div
            id="change__password"
            class="border border-primary rounded p-2"
            style="margin-top: 1rem; --bs-border-opacity: 0.5">
            <form action="/update/password/<%=locals.profile._id%>" method="post">
              <div class="row">
                <div class="col">
                  <label for="current__password" class="fw-bold"
                    >Mật khẩu hiện tại</label
                  >
                  <div class="d-flex" style="align-items: center">
                    <input
                      type="password"
                      class="form-control mb-3 input__field"
                      name="old_password"
                      id="current__password" />
                    <button
                      class="btn btn-light mb-3"
                      type="button"
                      onclick="console.log('ok')">
                      <i class="bi bi-eye"></i>
                    </button>
                  </div>
                </div>
                <div class="w-100"></div>
                <div class="col">
                  <label for="new__password" class="fw-bold"
                    >Mật khẩu mới</label
                  > <div class="d-flex" style="align-items: center">
                  <input
                    type="password"
                    class="form-control mb-3 input__field"
                    name="new_password"
                    id="new__password" />
                    <button
                    class="btn btn-light mb-3"
                    type="button"
                    onclick="console.log('ok')">
                    <i class="bi bi-eye"></i>
                </div></div>
              </div>

              <div class="row d-flex" style="justify-content: end">
                <button class="btn btn-primary me-3">Đổi mật khẩu</button>
              </div>
            </form>
          </div>
        </div>
      </main>

      <footer>
        <!-- place footer here -->
      </footer>
    </div>
    <script src="/scripts/popup.js"></script>
    <script src="/scripts/phan-cum-phuong/navigation.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
      integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
      crossorigin="anonymous"
    ></script>
    <script>
      var quill = new Quill("#editor", {
        theme: "snow",
      });
      document.getElementById("back-button").addEventListener("click", () => {
        window.location.href = "/dashboard/report";
      });
      document.getElementById("submit-button").addEventListener("click", () => {
        let xhr = new XMLHttpRequest();
        xhr.open("POST", window.location.href, true);
        xhr.setRequestHeader('Content-Type', 'application/json');
        xhr.send(JSON.stringify({ handling_method: quill.getText(), state: 1 }));
        window.location.href = "/dashboard/report";
      });
      document.getElementById("cancel-button").addEventListener("click", () => {
        let xhr = new XMLHttpRequest();
        xhr.open("POST", window.location.href, true);
        xhr.setRequestHeader('Content-Type', 'application/json');
        xhr.send(JSON.stringify({ handling_method: quill.getText(), state: 2 }));
        window.location.href = "/dashboard/report";
      });
    </script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
      integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
